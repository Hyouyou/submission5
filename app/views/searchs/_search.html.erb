<% if user_signed_in? %>
	<div class="search">
		<%= form_tag(search_path, :method => 'get') do %>
			<%= text_field_tag :term %>
			<%= select_tag(:option, options_for_select([["user","user"],["book","book"]])) %><!--["ブラウザに表示される文字",""コントローラーに送られてくる値]-->
			<%= select_tag(:choice, options_for_select([["完全一致", "perfect"],["前方一致", "front"],["後方一致","back"],["部分一致","part"]]))%>
			<%= submit_tag '検索' %>
		<% end %>
	</div>
<% end %>