<h1>検索結果</h1>

<table class="table">
	<% if @users.present? %>
	    <tr>
	    	<th>name</th>
	    	<th></th>
	    </tr>
		<% @users.each do |user| %>
		<tr>
			<td><%= user.name %></td>
			<td><%= button_to "詳細", user_path(user.id), method: :get, class:"btn btn-success" %></td>
		</tr>
	<% end %>
	<% elsif @books.present? %>
	    <tr>
	    	<th>Name</th>
	    	<th>Title</th>
	    	<th></th>
		<% @books.each do |book| %>
			<tr>
				<td><%= book.user.name %></td>
				<td><%= link_to book.title, book_path(book.id) %></td>
				<td><%= book.created_at %></td>
			</tr>
		<% end %>
		<%= paginate @books, class:"paginate" %>
	<% else %>
	　　<h1>検索結果はありません</h1>
	<% end %>

</table>